@model PetApiClient.ClinicHistoryRM

@{
    ViewBag.Title = "Registro de historia clínica";
}

@using (Html.BeginForm("Save", "ClinicHistory", Model, FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Registro de historia clínica</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Fecha de baja</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ArrivalDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArrivalDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Fecha de alta</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DischargeDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DischargeDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Signo clínico</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ClinicalSign, 10, 20, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClinicalSign, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Anamnesis</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Anamnesis, 10, 20, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Anamnesis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Diagnóstico</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Diagnostic, 10, 20, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Diagnostic, "", new { @class = "text-danger" })
            </div>
        </div> 

        <div class="form-group">
            <label class="control-label col-md-2">Tratamiento</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Treatment, 10, 20, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.Treatment, "", new { @class = "text-danger" })
            </div>
        </div>               

        <div class="form-group">
            <label class="control-label col-md-2">Observaciones</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Observations, 10, 20, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Observations, "", new { @class = "text-danger" })
            </div>
        </div>        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index", "Vet")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
